class Trivia1
    {
       List<Question> Questions = new List<Question>();
       string[] text;
       string question;
        
        public Trivia1()
        {
            //read question file
            text = System.IO.File.ReadAllLines("FakeTQ.txt");
            System.Console.WriteLine("Contents of TriviaQuestions.txt = ");
            
            foreach (string line in text)
            {
                // Use a tab to indent each line of the file.
                Console.WriteLine("\t" + line);
            }

            //declare answers and question. question is the first line for every question
            string[] answers= new string[4];
            for (int i = 0; i < text.Length / 5; i++)
            {           
                question = text[i*5];
                
                //setting up array of answers that takes 4 values.
                for (int j = 0; j < 4; j++)
                {
                    answers[j]=text[(i*5)+j];
                }
                //adds a new Question to the list of Questions
                Questions.Add(new Question(question, answers));
            }
                        
        }//end Trivia()

        //gets question from index 0 in list of questions 
        //takes in an int for #of questions needed
        public List<Question> getTriviaQ(int size)
        {
            
            List<Question> sentQ= new List<Question>();
            for (int i = 0; i < size; i++)
            {
                sentQ.Add(Questions[0]);
                reorderList();
            }
            return sentQ;
        }

        //reorders the list so that put used question at end of list
        public void reorderList()
        {
            Question q = Questions[0];
            Questions.RemoveAt(0);
            Questions.Add(q);

        }

    }//end Trivia class




    //DEFINES QUESTION
    class Question
    {
         String question;
         String[] answers;
         //int isRight;// index of correct answers #0-3

         public Question(String question, String[] answers)
         {
             this.question = question;
             this.answers = answers;
         }
    }
